@page
@model RRHH.WEB.Pages.Admin.Employees.IndexModel
@{
    Layout = "_AdminLayout";
}

<h3 class="mb-4">Registered employees</h3>

<p>
    <a asp-page="./Create" class="btn btn-primary">New employee</a>
</p>

@if (Model.Employees.Any())
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Phone</th>
            <th>Position</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.Email</td>
                <td>@employee.UserName</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Position</td>

                <td class="text-end">
                    <a asp-page="./Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-success">Edit</a>
                    <a asp-page="./Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info text-white">Details</a>
                    <a asp-page="./Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No employees registered.</div>
}